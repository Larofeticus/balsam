proc ModulesHelp { } {
   puts stderr "This module adds the Balsam commandline tools and Python package to your environment (requires Python >= 3.6)"
}

set _module_nme   [module-info name]
set is_module_rm  [module-info mode remove]
set sys           [uname sysname]
set os            [uname release]

